@model IEnumerable<Planning.Contract.Model.User>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(s => s.Name)</th>
            <th>@Html.DisplayNameFor(s => s.Login)</th>
            <th>@Html.DisplayNameFor(s => s.Description)</th>
            <th>@Html.DisplayNameFor(s => s.Formula)</th>
            <th>@Html.DisplayNameFor(s => s.ScheduleMode)</th>
            <th>@Html.DisplayNameFor(s => s.ScheduleCount)</th>
            <th>@Html.DisplayNameFor(s => s.ScheduleTimeSpan)</th>
            <th>@Html.DisplayNameFor(s => s.LeafOnly)</th>
            <th>@Html.DisplayNameFor(s => s.DefaultProjectTimespan)</th>
            <th>@Html.DisplayNameFor(s => s.ScheduleShift)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Name</td>
            <td>@item.Login</td>
            <td>@item.Description</td>
            <td>@item.Formula</td>
            <td>@item.ScheduleMode</td>
            <td>@item.ScheduleCount</td>
            <td>@item.ScheduleTimeSpan</td>
            <td>@item.LeafOnly</td>
            <td>@item.DefaultProjectTimespan</td>
            <td>@item.ScheduleShift</td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", "User", new { id = item.Id }, new { @class = "btn btn-dark" })
                @Html.ActionLink("Удалить", "Delete", "User", new { id = item.Id }, new { @class = "btn btn-dark" })
            </td>
        </tr>
        }
    </tbody>
</table>
